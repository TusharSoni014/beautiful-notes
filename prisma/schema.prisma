generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  email    String @unique
  password String
  notes    Note[]
}

model Note {
  id          String  @id @default(cuid())
  title       String
  description String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}
